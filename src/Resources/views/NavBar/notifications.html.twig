<li class="nav-item dropdown">
    <a class="nav-link" data-toggle="dropdown" href="#">
        <i class="far fa-bell"></i>
        <span class="badge badge-warning navbar-badge">{{ total }}</span>
    </a>
    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
        <span class="dropdown-item dropdown-header">{{ total }} Notification(s)</span>

        {% for notice in notifications %}
            <div class="dropdown-divider"></div>
            <a href="{{ path('sbs_adminlte_show_notification', { 'noticeId': notice.id}) }}" class="dropdown-item">
                <i class="{{ notice.icon }}"></i> {{ notice.message }}
            </a>
        {% endfor %}
        <div class="dropdown-divider"></div>
        <a href="{{ path('sbs_adminlte_all_notifications') }}" class="dropdown-item dropdown-footer">
            See All Notifications
        </a>
    </div>
</li>
